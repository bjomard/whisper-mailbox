{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "F3NIX WHISPER ContactCard v0.1",
  "type": "object",
  "required": ["v", "service", "handle", "pub", "mailboxes", "updated"],
  "properties": {
    "v": { "type": "integer", "const": 1 },
    "service": { "type": "string", "const": "whisper" },
    "handle": { "type": "string", "minLength": 3, "maxLength": 255 },
    "pub": {
      "type": "object",
      "required": ["x25519", "ed25519"],
      "properties": {
        "x25519": { "type": "string", "minLength": 10 },
        "ed25519": { "type": "string", "minLength": 10 }
      },
      "additionalProperties": false
    },
    "mailboxes": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["url", "prio"],
        "properties": {
          "url": { "type": "string", "minLength": 8 },
          "prio": { "type": "integer", "minimum": 0, "maximum": 1000 }
        },
        "additionalProperties": false
      }
    },
    "capabilities": {
      "type": "object",
      "properties": {
        "multi_mailbox": { "type": "boolean" },
        "pow": { "type": "boolean" },
        "nfc_pairing": { "type": "boolean" }
      },
      "additionalProperties": true
    },
    "updated": { "type": "integer", "minimum": 0 }
  },
  "additionalProperties": true
}
